    <div class="container">

        <!--progress bar-->
        <div class="form-progress">
            <progress class="form-progress-bar" min="0" max="100" value="33" step="2"
                aria-labelledby="form-progress-completion"></progress>

            <div class="form-progress-indicator one"></div>
            <div class="form-progress-indicator two active"></div>
        </div>
        
        <div class="row">
  <div class="col-75">
    <div class="container-cc">
      <form method="post" action="/Processpayment">

        <div class="row">
          <div class="col-50">
            <h3>Billing Address</h3>
            <label for="fname"><i class="fa fa-user"></i> Patient Name</label>
            <input type="text" id="patient_name" name="patient_name" placeholder="John M. Doe" required>
            <label for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="text" id="patient_email" name="patient_email">
            <label for="fname"><i class="fa fa-user"></i> Today's Date</label>
            <input type="date" id="date" name="date" required>
            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
            <input type="text" id="adr" name="address" placeholder="542 W. 15th Street" required>
            <label for="city"><i class="fa fa-institution"></i> City</label>
            <input type="text" id="city" name="city" placeholder="Auburn Hills" required>
            <div class="row">
              <div class="col-50">
                <label for="state">State</label>
                <input type="text" id="state" name="state" placeholder="MI" required>
              </div>
              <div class="col-50">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="48309" required>
              </div>
            </div>
          </div>
          <div class="col-50">
            <h3>Payment</h3>
            <div class="row">             
            <div class="col-75">
            <label for="fname">Accepted Cards</label>
            
             <div class="icon-container">
              <i class="fa-brands fa-cc-visa" style="color:navy;"></i>
              <i class="fa-brands fa-cc-amex" style="color:blue;"></i>
              <i class="fa-brands fa-cc-mastercard" style="color:red;"></i>
              <i class="fa-brands fa-cc-discover" style="color:orange;"></i>
            </div>
            <label for="cname">Name on Card</label>
            <input type="text" id="cardname" name="cardname" placeholder="John More Doe" required>
            <label for="ccnum">Credit card number</label>
              <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444" required>
            </div>
            
             <div class="col-15">
            <label for="expmonth">Exp Month</label>
            <select name="expmonth" id="expmonth">
                             <option value="0" selected> </option>
                              <option value="01">01</option>
                              <option value="02">02</option>
                              <option value="03">03</option>
                              <option value="04">04</option>
                              <option value="05">05</option>
                              <option value="06">06</option>
                              <option value="07">07</option>
                              <option value="08">08</option>
                              <option value="09">09</option>
                              <option value="10">10</option>
                              <option value="11">11</option>
                              <option value="12">12</option>
                 </select>  </div>
                          
                         <div class="col-15">  <label for="expyear">Exp Year</label>
                <select name="expyear" id="expyear">
                             <option value="0" selected> </option>
                              <option value="2022">2022</option>
                              <option value="2023">2023</option>
                              <option value="2024">2024</option>
                              <option value="2025">2025</option>
                          </select>
                </div>
                            <div class="col-15">
                            <label for="cvv">CVV</label><input type="text" name="cvv" placeholder="123" required>
                          
                          </div>
                        </div>
        </div>
          </div>
          <input type="hidden" name="amount" value="23">
        <input type="submit" value="Process Payment " class="btn">
      </form>
