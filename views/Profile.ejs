        <!--Graphs-->
        <div class="graphContainer">
          <div class="box">
            
          </div>
          <div class="box">
            
          </div>
        </div>
        <!-- Data List-->
        <div class="details">
          <div class="recentBill">
            <div class="cardHeader">
              <h2>MedCore Medication Prices</h2>
            </div>
            <div style="width: 65%">
                <table id="myTable">
                    <tr>
                      <th>Medication</th>
                      <th>Amount</th>
                      <th>Quantity</th>
                    </tr>
                  <tbody>
                      <% medications.forEach(function(medications){ %>
                        <tr>
                            <td><%= medications.Name %></td>
                            <td><%= medications.price %></td>
                            <td><%= medications.quantity %></td>
                        </tr>
                    <% }); %>
                  </tbody>
                </table>
             </div>
          </div>
        </div>
      </div>
    </div>
